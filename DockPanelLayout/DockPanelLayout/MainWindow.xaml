<Window x:Class="DockPanelLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanelLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
    <DockPanel>
        <Button Height="30" Background="Red" DockPanel.Dock="Top" />
        <Button Width="30" Background="Black" DockPanel.Dock="Left"/>
        <Button Width="30" Background="Orange" DockPanel.Dock="Right"/>
        <Button Height="30" Background="Yellow" DockPanel.Dock="Bottom"/>
        <Button Background="Green"/>
    </DockPanel>
    </Grid>
</Window>
