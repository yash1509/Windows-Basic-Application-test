<Window x:Class="LayoutCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas>
            <Rectangle Canvas.Left="25" Canvas.Top="25" Fill="Red" Width="30" Height="50"/>
            <Rectangle Canvas.Left="100" Canvas.Top="25" Fill="Orange" Width="30" Height="50"/>
            <Rectangle Canvas.Left="125" Canvas.Top="40" Fill="Blue" Width="30" Height="50"/>
            <Ellipse  Canvas.Left="25" Canvas.Bottom="40" Fill="Blue" Width="230" Height="50"/>
        </Canvas>
        
    </Grid>
</Window>
